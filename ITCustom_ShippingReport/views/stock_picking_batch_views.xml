<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_stock_picking_batch_print_pre_shipping" model="ir.ui.view">
            <field name="name">stock.picking.batch.form.print.pre.shipping</field>
            <field name="model">stock.picking.batch</field>
            <field name="inherit_id" ref="stock_picking_batch.stock_picking_batch_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_print']" position="after">
                    <button name="%(ITCustom_ShippingReport.report_pre_shipping_action)d"
                            string="Print Pre Shipping"
                            type="action"
                            class="oe_highlight"
                            invisible="state not in ('in_progress', 'done')"/>
                    <button name="%(ITCustom_ShippingReport.report_commercial_invoice_action)d"
                            string="Commercial Invoice"
                            type="action"
                            class="oe_highlight"
                            invisible="state not in ('in_progress', 'done')"/>
                    <button name="%(ITCustom_ShippingReport.report_packing_list_action)d"
                            string="Packing List"
                            type="action"
                            class="oe_highlight"
                            invisible="state not in ('in_progress', 'done')"/>
                    <button name="%(ITCustom_ShippingReport.report_invoice_doc_buyer_bern_action)d"
                            string="Invoice Doc Buyer - BERN"
                            type="action"
                            class="oe_highlight"
                            invisible="state not in ('in_progress', 'done')"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
