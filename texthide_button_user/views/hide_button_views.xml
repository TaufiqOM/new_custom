<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_hide_button_rule_tree" model="ir.ui.view">
        <field name="name">hide.button.rule.tree</field>
        <field name="model">hide.button.rule</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="button_name"/>
                <field name="model_name"/>
                <field name="method_name"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_hide_button_rule_form" model="ir.ui.view">
        <field name="name">hide.button.rule.form</field>
        <field name="model">hide.button.rule</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="button_name"/>
                            <field name="model_name"/>
                            <field name="method_name"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="user_ids" widget="many2many_tags"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_hide_button_rule_search" model="ir.ui.view">
        <field name="name">hide.button.rule.search</field>
        <field name="model">hide.button.rule</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="button_name"/>
                <field name="model_name"/>
                <field name="method_name"/>
                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                <filter string="Inactive" name="inactive" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>

    <!-- Action and Menu -->
    <record id="action_hide_button_rule" model="ir.actions.act_window">
        <field name="name">Hide Button Rules</field>
        <field name="res_model">hide.button.rule</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_active': 1}</field>
    </record>

    <menuitem 
        id="menu_hide_button_config" 
        name="Hide Button Rules" 
        parent="base.menu_config"
        action="action_hide_button_rule"
        sequence="100"/>
</odoo>
