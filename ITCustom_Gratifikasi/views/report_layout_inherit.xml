        <!-- Inherit external_layout_standard -->
        <template id="external_layout_standard_inherit_gratifikasi" inherit_id="web.external_layout_standard">
            <xpath expr="//div[contains(@class, 'footer') or contains(@t-attf-class, 'footer')]//div[contains(@class, 'o_footer_content') or contains(@t-attf-class, 'o_footer_content')]" position="before">
                <div style="text-align: left; font-size: 16px; margin: 0; display: flex; align-items: center; color: red; font-weight: bold;">
                    <img src="/ITCustom_Gratifikasi/static/src/img/skull.png" style="width: 48px; height: 50px; margin-right: 5px;"/>
                    Tidak menerima gratifikasi / suap dalam bentuk apapun
                </div>
            </xpath>
        </template>

