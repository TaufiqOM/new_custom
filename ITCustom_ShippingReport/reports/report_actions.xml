<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Paper Format for Landscape A4 -->
        <record id="paperformat_pre_shipping_landscape" model="report.paperformat">
            <field name="name">Pre Shipping Landscape</field>
            <field name="default">False</field>
            <field name="format">A4</field>
            <field name="orientation">Landscape</field>
            <field name="margin_top">10</field>
            <field name="margin_bottom">10</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_line">False</field>
            <field name="header_spacing">0</field>
            <field name="dpi">90</field>
        </record>

        <!-- Paper Format for Portrait A4 -->
        <record id="paperformat_commercial_invoice_portrait" model="report.paperformat">
            <field name="name">Commercial Invoice Portrait</field>
            <field name="default">False</field>
            <field name="format">A4</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">10</field>
            <field name="margin_bottom">10</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_line">False</field>
            <field name="header_spacing">0</field>
            <field name="dpi">90</field>
        </record>

        <!-- Report Action -->
        <record id="report_pre_shipping_action" model="ir.actions.report">
            <field name="name">Pre Shipping Report</field>
            <field name="model">stock.picking.batch</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">ITCustom_ShippingReport.report_pre_shipping_template</field>
            <field name="report_file">ITCustom_ShippingReport.report_pre_shipping_template</field>
            <field name="print_report_name">'Pre Shipping - %s' % (object.name)</field>
            <field name="paperformat_id" ref="ITCustom_ShippingReport.paperformat_pre_shipping_landscape"/>
            <field name="binding_model_id" ref="stock_picking_batch.model_stock_picking_batch"/>
            <field name="binding_type">report</field>
        </record>

        <!-- Report Action for Commercial Invoice -->
        <record id="report_commercial_invoice_action" model="ir.actions.report">
            <field name="name">Commercial Invoice</field>
            <field name="model">stock.picking.batch</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">ITCustom_ShippingReport.report_commercial_invoice_template</field>
            <field name="report_file">ITCustom_ShippingReport.report_commercial_invoice_template</field>
            <field name="print_report_name">'Commercial Invoice - %s' % (object.name)</field>
            <field name="paperformat_id" ref="ITCustom_ShippingReport.paperformat_commercial_invoice_portrait"/>
            <field name="binding_model_id" ref="stock_picking_batch.model_stock_picking_batch"/>
            <field name="binding_type">report</field>
        </record>

        <!-- Report Action for Packing List -->
        <record id="report_packing_list_action" model="ir.actions.report">
            <field name="name">Packing List</field>
            <field name="model">stock.picking.batch</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">ITCustom_ShippingReport.report_packing_list_template</field>
            <field name="report_file">ITCustom_ShippingReport.report_packing_list_template</field>
            <field name="print_report_name">'Packing List - %s' % (object.name)</field>
            <field name="paperformat_id" ref="ITCustom_ShippingReport.paperformat_commercial_invoice_portrait"/>
            <field name="binding_model_id" ref="stock_picking_batch.model_stock_picking_batch"/>
            <field name="binding_type">report</field>
        </record>

        <!-- Report Action for Invoice Document -->
        <record id="report_invoice_doc_action" model="ir.actions.report">
            <field name="name">Invoice Document</field>
            <field name="model">stock.picking.batch</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">ITCustom_ShippingReport.report_invoice_doc_template</field>
            <field name="report_file">ITCustom_ShippingReport.report_invoice_doc_template</field>
            <field name="print_report_name">'Invoice Document - %s' % (object.name)</field>
            <field name="paperformat_id" ref="ITCustom_ShippingReport.paperformat_commercial_invoice_portrait"/>
            <field name="binding_model_id" ref="stock_picking_batch.model_stock_picking_batch"/>
            <field name="binding_type">report</field>
        </record>

        <!-- Report Action for Invoice M3 -->
        <record id="report_invoice_m3_action" model="ir.actions.report">
            <field name="name">Invoice M3</field>
            <field name="model">stock.picking.batch</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">ITCustom_ShippingReport.report_invoice_m3_template</field>
            <field name="report_file">ITCustom_ShippingReport.report_invoice_m3_template</field>
            <field name="print_report_name">'Invoice M3 - %s' % (object.name)</field>
            <field name="paperformat_id" ref="ITCustom_ShippingReport.paperformat_commercial_invoice_portrait"/>
            <field name="binding_model_id" ref="stock_picking_batch.model_stock_picking_batch"/>
            <field name="binding_type">report</field>
        </record>
    </data>
</odoo>
