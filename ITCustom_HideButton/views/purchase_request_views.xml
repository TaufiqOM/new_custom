<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Inherit purchase.request form view to hide Approve and Reset buttons based on user -->
        <record id="view_purchase_request_form_hide_button" model="ir.ui.view">
            <field name="name">purchase.request.form.hide.button</field>
            <field name="model">purchase.request</field>
            <field name="inherit_id" ref="om_purchase_request.view_purchase_request_form"/>
            <field name="arch" type="xml">
                <!-- Hide Approve button -->
                <xpath expr="//button[@name='button_approved']" position="attributes">
                    <attribute name="invisible">state not in ('to_approve') or hide_approve_button</attribute>
                </xpath>
                <!-- Hide Reset button -->
                <xpath expr="//button[@name='button_draft']" position="attributes">
                    <attribute name="invisible">state not in ('to_approve','approved','rejected','done') or hide_reset_button</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
