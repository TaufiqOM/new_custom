<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_purchaseorder_document_inherit_qty" inherit_id="purchase.report_purchaseorder_document">
        <xpath expr="//span[@t-field='line.product_qty']" position="replace">
            <span t-esc="int(line.product_qty) if line.product_qty == int(line.product_qty) else line.product_qty"/>
        </xpath>
    </template>
</odoo>
