<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_blanket_order_form_inherit_total_om_price" model="ir.ui.view">
            <field name="name">sale.blanket.order.form.inherit.total.om.price</field>
            <field name="model">sale.blanket.order</field>
            <field name="inherit_id" ref="sale_blanket_order.view_blanket_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@class='oe_subtotal_footer oe_right']" position="inside">
                    <field name="amount_total_sec_price" widget="monetary" options="{'currency_field': 'currency_id'}" string="Total OM Price"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
