<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Paper Format for Landscape A4 -->
        <record id="paperformat_pre_shipping_landscape" model="report.paperformat">
            <field name="name">Pre Shipping Landscape</field>
            <field name="default">False</field>
            <field name="format">A4</field>
            <field name="orientation">Landscape</field>
            <field name="margin_top">10</field>
            <field name="margin_bottom">10</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_line">False</field>
            <field name="header_spacing">0</field>
            <field name="dpi">90</field>
        </record>

        <!-- Report Action -->
        <record id="report_pre_shipping_action" model="ir.actions.report">
            <field name="name">Pre Shipping Report</field>
            <field name="model">stock.picking.batch</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">ITCustom_ShippingReport.report_pre_shipping_template</field>
            <field name="report_file">ITCustom_ShippingReport.report_pre_shipping_template</field>
            <field name="print_report_name">'Pre Shipping - %s' % (object.name)</field>
            <field name="paperformat_id" ref="ITCustom_ShippingReport.paperformat_pre_shipping_landscape"/>
            <field name="binding_model_id" ref="stock_picking_batch.model_stock_picking_batch"/>
            <field name="binding_type">report</field>
        </record>
    </data>
</odoo>
